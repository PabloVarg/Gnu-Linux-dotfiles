#!/bin/sh
while read file
do
    case "$1" in
        "w")
            [ "$(printf "No\\nYes" | dmenu -i -b -p "Set $file as Wallpaper?")" = "Yes" ] && feh --bg-fill "$file" & ;;
        "x")
            [ "$(printf "No\\nYes" | dmenu -i -b -p "Set $file as LockScreen?")" = "Yes" ] && betterlockscreen -u "$file" ;;
        "d")
		    [ "$(printf "No\\nYes" | dmenu -i -b -p "Delete $file?")" = "Yes" ] && rm "$file" ;;
        "D")
            rm "$file" ;;
   esac
done
