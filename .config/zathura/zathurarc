set guioptions "v"
set page-padding 1

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print

set window-title-basename "true"
set selection-clipboard clipboard

set font "FiraCode 10"

## Gruvbox theme

set notification-error-bg       "#1d2021" # bg
set notification-error-fg       "#ea6962" # bright:red
set notification-warning-bg     "#1d2021" # bg
set notification-warning-fg     "#d8a657" # bright:yellow
set notification-bg             "#1d2021" # bg
set notification-fg             "#a9b665" # bright:green

set completion-bg               "#282828" # bg2
set completion-fg               "#d4be98" # fg
set completion-group-bg         "#282828" # bg1
set completion-group-fg         "#7c6f64" # gray
set completion-highlight-bg     "#7daea3" # bright:blue
set completion-highlight-fg     "#282828" # bg2

# Define the color in index mode
set index-bg                    "#282828" # bg2
set index-fg                    "#d4be98" # fg
set index-active-bg             "#7daea3" # bright:blue
set index-active-fg             "#282828" # bg2

set inputbar-bg                 "#1d2021" # bg
set inputbar-fg                 "#d4be98" # fg

set statusbar-bg                "#282828" # bg2
set statusbar-fg                "#d4be98" # fg

set highlight-color             "#fbf1c7" # white
set highlight-active-color      "#fbf1c7" # white

set default-bg                  "#1d2021" # bg
set default-fg                  "#d4be98" # fg
set render-loading              true
set render-loading-bg           "#1d2021" # bg
set render-loading-fg           "#d4be98" # fg

# Recolor book content's color
set recolor-lightcolor          "#1d2021" # bg
set recolor-darkcolor           "#d4be98" # fg
set recolor                     "true"
set recolor-keephue             true      # keep original color
