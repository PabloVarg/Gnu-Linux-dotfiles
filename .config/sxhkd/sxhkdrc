# Basic bindings

super + Return
    $TERMINAL

super + shift + Return
    $TERMINAL -c floatingSet

super + period
    code

super + control + period
    $TERMINAL -e $EDITOR

super + c
    $TERMINAL -c floatingSet -e $RESOURCES

super + k
    $TERMINAL -c floatingSet -e $FILE

super + l
    dmenu_run -nf '#FFFFFF' -nb '#292826' -sb '#8C8C8C' -sf '#292826' -b -i -fn "FiraCode-10"

super + b
    $BROWSER

super + shift + b
    $BROWSER --incognito

super + shift + m
    amixer sset 'Master' toggle

super + control + f
    setbg "$HOME/Wallpapers/" &

super + control + q
    $TERMINAL -e betterlockscreen -u ~/Wallpapers/

super + control + o
    pavucontrol

super + control + comma
    $TERMINAL -e nmtui

super + control + p
    red_light

super + control + k
    VirtualBox

super + control + m
    set_volume

super + q
    betterlockscreen -t $(whoami) -l

super + shift + q
    betterlockscreen -t $(whoami) -s

super + Print
    screenshot

# Environment

super + x
    polybar-msg cmd toggle

# Special byndings

XF86Calculator
    $TERMINAL -c floatingSet -e python

XF86HomePage
    $BROWSER

XF86Mail
    $BROWSER https://www.outlook.com

XF86Tools
    start_spotify

XF86AudioMute
    change_volume toggle

XF86AudioLowerVolume
    change_volume down 1

XF86AudioRaiseVolume
    change_volume up 1

XF86AudioPlay
    playerctl play-pause

XF86AudioPause
    playerctl play-pause

XF86AudioStop
    playerctl stop

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

# Special fn bindings

super + F1
    start spotify

super + F2
    change_volume down 1

super + F3
    change_volume up 1

super + F4
    change_volume toggle

super + F5
    playerctl stop

super + F6
    playerctl previous

super + F7
    playerctl play-pause

super + F8
    playerctl next
