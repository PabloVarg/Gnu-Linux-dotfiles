# Basic bindings

super + Return
    $TERMINAL

super + shift + Return
    $TERMINAL -c floatingSet

super + e
    code

super + control + e
    $TERMINAL -e $EDITOR

super + i
    $TERMINAL -c floatingSet -e $RESOURCES

super + v
    $TERMINAL -c floatingSet -e $FILE

super + p
    dmenu_run -nf '#EBDBB2' -nb '#282828' -sb '#665C54' -sf '#EBDBB2' -b -i -fn "FiraCode-10"

super + n
    $BROWSER

super + shift + n
    $BROWSER --incognito

super + control + y
    setbg "$HOME/Wallpapers/" &

super + control + x
    $TERMINAL -e betterlockscreen -u ~/Wallpapers/

super + control + s
    pavucontrol

super + control + w
    $TERMINAL -e nmtui

super + control + r
    red_light

super + control + v
    VirtualBox

super + control + m
    set_volume

super + x
    betterlockscreen -t $(whoami) -l

super + shift + x
    betterlockscreen -t $(whoami) -s

super + Print
    screenshot

Print
    maim -u | xclip -selection clipboard -t image/png

# Environment

super + b
    polybar-msg cmd toggle

# Special byndings

XF86Calculator
    $TERMINAL -c floatingSet -e python

XF86HomePage
    $BROWSER

XF86Mail
    $BROWSER https://www.outlook.com

XF86Tools
    start_spotify

XF86AudioMute
    change_volume toggle

XF86AudioLowerVolume
    change_volume down 1

XF86AudioRaiseVolume
    change_volume up 1

XF86AudioPlay
    playerctl play-pause

XF86AudioPause
    playerctl play-pause

XF86AudioStop
    playerctl stop

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

# Special fn bindings

super + F1
    start_spotify

super + F2
    change_volume down 1

super + F3
    change_volume up 1

super + F4
    change_volume toggle

super + F5
    playerctl stop

super + F6
    playerctl previous

super + F7
    playerctl play-pause

super + F8
    playerctl next

super + F12
    $TERMINAL -c floatingSet -e python
