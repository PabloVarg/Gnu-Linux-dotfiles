# Please see https://i3wm.org/docs/userguide.html for a complete reference!
#=================SETUP=========================
#Var's
set $initi 0
set $inito 0
set $step  5

#Conf
focus_on_window_activation focus
for_window [class="^.*"] border pixel 0
title_align center
gaps inner $initi
gaps outer $inito

#Windows follow mouse
focus_follows_mouse no

#================Variables=====================
set $mod Mod4

#================Fonts=========================
# Font for window titles, etc.
font pango:DejaVu Sans Mono 8

#================Startup=======================
#Programs startup
exec_always --no-startup-id start_polybar

#==============Windows manipulation============
# kill focused window
bindsym $mod+Shift+semicolon kill

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# change focus
bindsym $mod+d focus left
bindsym $mod+h focus down
bindsym $mod+t focus up
bindsym $mod+n focus right

# enter fullscreen mode for the focused container
bindsym $mod+u fullscreen toggle

# Focus parent
bindsym $mod+a focus parent

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# toggle sticky
bindsym $mod+Shift+l sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

#Split toogle
bindsym $mod+y split toggle

# move the currently focused window to the scratchpad
bindsym $mod+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+at scratchpad show
bindsym $mod+Control+at [class="Spotify"] scratchpad show
bindsym $mod+Control+5 [class=".*browser"] scratchpad show

#===================Workspaces====================
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+percent workspace $ws1
bindsym $mod+7 workspace $ws2
bindsym $mod+5 workspace $ws3
bindsym $mod+3 workspace $ws4
bindsym $mod+1 workspace $ws5
bindsym $mod+9 workspace $ws6
bindsym $mod+0 workspace $ws7
bindsym $mod+2 workspace $ws8
bindsym $mod+4 workspace $ws9
bindsym $mod+6 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+percent move container to workspace $ws1
bindsym $mod+Shift+7 move container to workspace $ws2
bindsym $mod+Shift+5 move container to workspace $ws3
bindsym $mod+Shift+3 move container to workspace $ws4
bindsym $mod+Shift+1 move container to workspace $ws5
bindsym $mod+Shift+9 move container to workspace $ws6
bindsym $mod+Shift+0 move container to workspace $ws7
bindsym $mod+Shift+2 move container to workspace $ws8
bindsym $mod+Shift+4 move container to workspace $ws9
bindsym $mod+Shift+6 move container to workspace $ws10

#Assign Aplications certain workspaces
for_window [class="Spotify"] move scratchpad
for_window [class="^floatingSet$"] floating enable

#================i3 Functionality=============
# reload the configuration file
bindsym $mod+Shift+j reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+p restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+period exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

#=================Modes=======================
#Resize windows
mode "resize" {
    bindsym d resize shrink width 5 px or 5 ppt
    bindsym h resize grow height 5 px or 5 ppt
    bindsym t resize shrink height 5 px or 5 ppt
    bindsym n resize grow width 5 px or 5 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

#Gaps mode
mode "gaps" {
    bindsym n gaps outer current plus $step
    bindsym d gaps outer current minus $step
    bindsym t gaps inner current plus $step
    bindsym h gaps inner current minus $step
    bindsym y gaps inner current set $initi; gaps outer current set $inito
    bindsym b gaps inner current set 0; gaps outer current set 0

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+g mode "default"
}

bindsym $mod+g mode "gaps"

#Move windows
mode "move" {
    bindsym d move left
    bindsym h move down
    bindsym t move up
    bindsym n move right
    bindsym c move absolute position center

    bindsym u layout stacking
    bindsym e layout tabbed
    bindsym o layout toggle split

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
}

bindsym $mod+m mode "move"
#===================Colors======================
# Set colors
set $red            #FF0000
set $yellow         #F9D342
set $grey           #8C8C8C
set $black          #292826
set $white          #FFFFFF
set $transparent    #00000000

#                       BORDER		BACKGROUND	TEXT		INDICATOR
client.focused          $white      $black		$white		$yellow
client.unfocused        $black      $black		$white		$yellow
client.focused_inactive	$grey       $black		$white		$yellow
client.urgent           $black      $red        $black		$yellow
client.background       $black
